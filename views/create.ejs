<!-- include header -->
<%- include('header') %>
    <!-- /include header -->
    <style>
        .k {
            background-color: black;
            text-align: center;
            color: white;
            font-size: 25px;
            height: 50px;
        }
        .foot{
            position: fixed;
            bottom: 0;
            background-color: black;
            text-align: center;
            color: white;
            width: 100%;
            font-size: 25px;
            height: 50px;

        }
        .f{
            text-align: center;
        }
        .a {
        background-color: black;
        color: white;
        border:none;
        margin-top: 5%;
        padding-left: 0%;
        }
        .btn {
            background-color: DodgerBlue;
            /* Blue background */
            border: none;
            /* Remove borders */
            color: white;
            /* White text */
            padding: 12px 16px;
            /* Some padding */
            font-size: 16px;
            /* Set a font size */
            cursor: pointer;
            /* Mouse pointer on hover */
            position: absolute;
            top: 10px;
            right:10px;
        }

        /* Darker background on mouse-over */
        .btn:hover {
            background-color: RoyalBlue;
        }
    </style>

    <body>
        <header>
            <div class="k">
                <a  href="https://locandyy.herokuapp.com/" >
                    Locandyy</div></a>
        </header>
        <main>


            <br>
            <br>
            <br>
            <form action="/locations/" class="f" method="POST">
                <div class="card-body">
                    <div class="form-group">
                        <label for="name" class="c1">Name: </label>
                        <input id="name" type="text" name="locationName" required>
                    </div>
                    <div class="form-group">
                        <label for="latitude" class="c1">Latitude: </label>
                        <input type="number" step =".0000000000000001" name="latitude" min="-90.00000000000" max= "90.0000000000" required>
                    </div>
                    <div class="form-group">
                        <label for="longitude" class="c1">Longitude: </label>
                        <input  type="number" step = ".000000000000001" name="longitude" min="-180.000000000000" max="180.0000000000000" required>
                    </div>

                    <div id="t">
                        <button type="submit" class="btn btn-black" >Save</button>
                    </div>
                    </div>
            </form>
        </main>

        <link href="../public/Styles/main.css" rel="stylesheet" type="text/css">
        <script type="module " src="../services.js "></script>
    </body>
    <br>
    <footer class="foot">

        <a href="https://github.com/Chandupolisetty/Locandyy">
            <i class="fab fa-github "></i> GitHub</a>
    </footer>
