<!doctype html>
<html lang='en'>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>The Hunt</title>
    <!-- get styles from https://mdbootstrap.com/md-bootstrap-cdn/ -->
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.7/css/mdb.min.css" rel="stylesheet">
</head>
<body style="width: 100%; height: 100vh; display: flex; flex-direction:column; flex-wrap:nowrap">

    <main style="flex-grow: 1; overflow: auto; min-height: 2em;">
        <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>longitude</th>
                <th>Latitude</th>
                <th>edit</th>
                <th>Delete</th>
              </tr>
            </thead>
        
            <tbody>
              <% for(var i=0; i < location.length; i++) { %>
              <tr>
                
                <td><%= location[i].locationName %></td>
                <td><%= location[i].longitude %></td>
                <td><%= location[i].latitude %></td>
               
               
              </tr>
              <% } %>
            </tbody>
          </table>
    </main>
   
    <!-- get from https://mdbootstrap.com/md-bootstrap-cdn/ -->

    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js">
    </script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.7/js/mdb.min.js">
    </script>

</body>

</html>